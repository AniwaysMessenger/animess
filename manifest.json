{
    "manifest_version": 2,
    "name": "Messenger CRM",
    "description": "Facebook Messenger CRM",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["https://www.messenger.com/*"],
            "css": ["./css/hunter_style.css"],
            "js": ["./js/jquery.min.js", "./js/hunter_script.js"]
        }
    ],
    "background": {
        "scripts": ["./js/background.js"]
    },
    "permissions": [
        "https://messenger.com/"
    ],
    "browser_action": {
        "default_title": "Messenger CRM"
    }
}