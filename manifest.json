{
    "manifest_version": 3,
    "name": "Messenger CRM",
    "description": "Facebook Messenger CRM",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["https://www.messenger.com/*"],
            "css": ["./css/hunter_style.css"],
            "js": ["./js/jquery.min.js", "./js/hunter_script.js"]
        },
        {
            "matches": ["https://www.facebook.com/messages/*?message=*"],
            "css": ["./css/send.css"],
            "js": ["./js/jquery.min.js", "./js/send.js"]
        }
    ],
    "permissions": [
        "https://messenger.com/", 
        "storage"
    ],
    "browser_action": {
        "default_title": "Messenger CRM"
    }
}