{
    "manifest_version": 2,
    "name": "Messenger CRM",
    "description": "Facebook Messenger CRM",
    "version": "1.0",
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": ["*://*.messenger.com/*"],
            "js": ["messenger.js"],
            "css": ["messenger.css"]
        }
    ],
    "browser_action": {
        "default_title": "Messenger CRM",
        "default_popup": "popup.html"
    }
}